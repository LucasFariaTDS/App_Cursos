<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#C56E6E"
    tools:context=".view.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="30dp"
                android:text="@string/txt_tittle"
                android:textSize="24sp"
                android:textStyle="italic"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editText_first_name"
                android:layout_width="333dp"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#7C6D6D"
                android:ems="10"
                android:hint="@string/txt_hint_edit_first_name"
                android:inputType="text"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editText_last_name"
                android:layout_width="333dp"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#7C6D6D"
                android:ems="10"
                android:hint="@string/txt_hint_edit_last_name"
                android:inputType="text"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="333dp"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:hint="@string/text_hint_desired_course"
                android:gravity="center"/>

            <EditText
                android:id="@+id/editText_contact_number"
                android:layout_width="333dp"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#7C6D6D"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/txt_hint_edit_contact_number"
                android:inputType="text"
                tools:ignore="TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:backgroundTint="#4A4AA0"
                android:text="@string/txt_button_save" />

                <Button
                    android:id="@+id/button_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="#4A4AA0"
                    android:text="@string/txt_button_clear" />
            </LinearLayout>
            <Button
                android:id="@+id/button_finish"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#3232C7"
                android:gravity="center"
                android:text="@string/txt_button_finish" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>